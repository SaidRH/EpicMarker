                    <Button.BitmapEffect>
                        <DropShadowBitmapEffect Color="Black" Direction="40" Softness="0.5" ShadowDepth="0" Opacity="0.5" />
                    </Button.BitmapEffect>
                </Button>
        </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
