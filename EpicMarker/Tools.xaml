                        <Button.BitmapEffect>
                            <DropShadowBitmapEffect Color="Black" Direction="40" Softness="0.5" ShadowDepth="0" Opacity="0.5" />
                        </Button.BitmapEffect>
                    </Button>
                </StackPanel>
                <StackPanel  Orientation="Vertical" HorizontalAlignment="Center">
                    <Button BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Name="button22" Click="button22_Click" Height="25">
                        <Image Source="/images/Circle.png" Width="10"/>
                        <Button.BitmapEffect>
                            <DropShadowBitmapEffect Color="Black" Direction="40" Softness="0.5" ShadowDepth="0" Opacity="0.5" />
                        </Button.BitmapEffect>
                    </Button>
                    <Button Margin="0,-5,0,-0" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Name="button23" Click="button23_Click" Height="25">
